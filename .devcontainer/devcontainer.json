{
	"name": "AI Software Factory",
	"image": "mcr.microsoft.com/devcontainers/python:3.11",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {}
	},
	"postCreateCommand": "pip install -r requirements.txt && playwright install --with-deps",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter"
			]
		}
	},
	"forwardPorts": [8501, 5000]
}